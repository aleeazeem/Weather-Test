{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "allowJs": false,
    "outDir": "jsFiles",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [
    "./node_modules"
  ]
}
